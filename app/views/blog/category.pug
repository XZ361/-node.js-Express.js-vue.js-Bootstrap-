extends ./layout.pug

block content
    h2.page-header
        = category.name
        | &nbsp;分类下的所有文章 &nbsp;
        = posts.length
    each post in posts
        div.post
            h3.post-title
                a(href='/posts/view/'+post.slug, target="_blank")
                    =post.title
            div.post-abstract
                =truncate(post.content,150)
            div.post-meta
                span.post-created
                    i.fa.fa-clock-o &nbsp;
                    =moment(post.created).format('YYYY-MM-DD')
                span.post-author
                    i.fa.fa-user &nbsp;
                    =post.author.name
                span.post-category
                    i.fa.fa-calendar &nbsp;
                    a(href='/posts/category/' + post.category.name, target = '_blank')
                        =post.category.name
                span.post-comment
                    i.fa.fa-comment &nbsp;
                    =post.comments.length || 0
                span.post-favorite
                    a(href='/posts/favorite/' + post._id, target="_blank")
                        i.fa.fa-star &nbsp;
                        =post.meta.favorite || 0
                span.post-link
